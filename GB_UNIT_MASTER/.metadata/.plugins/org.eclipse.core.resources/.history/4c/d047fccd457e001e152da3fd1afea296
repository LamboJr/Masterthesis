#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>

#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"

//#include "structs.h"

#define FrameMask 0xFFFF0000
void decode_Pokemon_data(u32 *Pokemonbuffer, u32 Bufferindex){
	u32 i = Bufferindex;
	u32 FrameNumber;
	FrameNumber = Pokemonbuffer[i] >> 16;
	if ( FrameNumber <= 5){
		xil_printf("Trainer data frame : \n");
	}
	if (( FrameNumber > 5) && (FrameNumber <= 20)){
		xil_printf("First two Pokemon Data frames :\n");
	}
	if ((FrameNumber > 20) && (FrameNumber <= 35)){
		xil_printf("3 & 4 Pokemon data frames:\n");
	}
	if ((FrameNumber > 35) && (FrameNumber <= 50)){
		xil_printf("5 & 6 Pokemon data frames:\n");
	}
}
